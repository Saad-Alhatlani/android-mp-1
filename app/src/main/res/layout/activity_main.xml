<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EFD4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Grade Calculator"
        android:textColor="#132743"
        android:textSize="35sp" />/>

    <EditText
        android:id="@+id/quiz"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#EDC988"
        android:backgroundTint="#EDC988"
        android:ems="10"
        android:hint="Quizes 15%"
        android:inputType="number"
        android:textColor="#000000" />/>

    <EditText
        android:id="@+id/hw"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#EDC988"
        android:ems="10"
        android:hint="Homework 25%"
        android:inputType="number"
        android:textColor="#000000" />/>

    <EditText
        android:id="@+id/medterm"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#EDC988"
        android:ems="10"
        android:hint="Midterms 30%"
        android:inputType="number"
        android:textColor="#000000" />/>

    <EditText
        android:id="@+id/finals"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#EDC988"
        android:ems="10"
        android:hint="Final 30%"
        android:inputType="number"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#132743"
        android:backgroundTint="#132743"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="CALCULATE"
        android:textColor="#F8EFD4"
        android:textStyle="bold"
        app:iconTint="#8BC34A"
        app:rippleColor="#FFFFFF" />

    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Reset" />

    <TextView
        android:id="@+id/results"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#D7385E"
        android:textSize="30sp" /><![CDATA[

    //>

]]>
</LinearLayout>